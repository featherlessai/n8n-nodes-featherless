{
    "compilerOptions": {
      "strict": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "target": "es2019",
      "outDir": "./dist",
      "rootDir": ".",
      "types": ["node", "jest"],
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "resolveJsonModule": true,
      "baseUrl": ".",
      "paths": {
        "n8n-workflow": ["node_modules/n8n-workflow"]
      }
    },
    "include": ["credentials/**/*", "nodes/**/*", "package.json"],
    "exclude": ["node_modules", "dist"]
  }